<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:background="@color/bg"
              android:gravity="center"
              android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/home_bar" app:titleTextColor="@color/toolbar"
            app:subtitleTextAppearance="@style/Toolbar.SubTitleText"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:listitem="@layout/home_item_view" app:spanCount="2"
            tools:itemCount="2" app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:id="@+id/mRecyclerView">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>