<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ClockInActivity" android:orientation="vertical"
        android:fitsSystemWindows="true" android:background="@android:color/white" android:gravity="center"
        android:id="@+id/Linear">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout2"
    >
        <androidx.appcompat.widget.Toolbar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize" android:id="@+id/clock_in_bar"
                app:navigationIcon="@drawable/toolbar_back" app:subtitleTextColor="#F0FFFFFF"
                app:titleTextColor="@color/toolbar"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/clockin_daka"
                android:id="@+id/imageView3"
        />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_horizontal"
                android:layout_marginTop="100dp" android:layout_marginLeft="100dp" android:layout_marginRight="100dp"
        >
            <Switch
                    android:text="@string/AtHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/at_home"
                    android:gravity="center" android:textColor="@color/color_light_blue"
                    android:checked="true"/>
            <Switch
                    android:text="@string/AtSchool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/at_school" android:gravity="center"
                    android:textColor="@color/color_light_blue"
                    android:layout_marginTop="20dp"/>
            <Button
                    android:text="@string/daka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/dakaButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginTop="50dp"/>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/setButton" app:backgroundTint="#FFFFFF"
                android:src="@drawable/home_bar_setting" android:layout_gravity="right"
                android:layout_marginRight="50dp"/>
    </LinearLayout>


</LinearLayout>