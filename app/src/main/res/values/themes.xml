<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hhu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Hhu.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hhu.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hhu.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--About Page-->
    <style name="AppTheme.About" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/about_bg_light</item>
        <item name="colorPrimaryDark">@color/about_bg_light</item>
        <item name="colorAccent">@color/about_bg_light</item>

        <!--optional-->
        <item name="aboutPageHeaderBackground">@color/about_bg_light</item>
        <item name="aboutPageHeaderTextColor">@color/white</item>
    </style>

    <style name="Theme.Hhu.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hhu.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hhu.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>