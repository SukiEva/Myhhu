<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ServiceActivity" android:orientation="vertical"
        android:background="@android:color/white"
        android:fitsSystemWindows="true">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/service_bar"
            app:navigationIcon="@drawable/toolbar_back" app:titleTextColor="@color/toolbar"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/web">
    </WebView>
    <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:id="@+id/progressBar" android:max="100" android:progress="0" android:visibility="visible"
            android:background="#FFFFFF" android:progressTint="@color/color_light_blue"/>
</LinearLayout>